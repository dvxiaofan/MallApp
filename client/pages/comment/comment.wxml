
<view class="product-card">
	<image class="product-image" src="{{product.image}}" />
	<view class="product-info">
		<view class="product-name">{{product.name}}</view>
		<view class="product-price">￥ {{product.price}}</view>
	</view>
</view>

<view class="comment-list">
		<!-- <view class="comment-title"> -->
				<view class="comment-title">1条评论</view>
				<view class="comment-card">
						<image class="comment-avatar" src="{{product.comments[0].avatar}}" />
						<view class="comment-cnt">
							<view class="comment-top">
								<view class="comment-username">{{product.comments[0].username}}</view>
								<view class="comment-time">{{product.comments[0].time}}</view>
							</view>
							<view class="comment-content">{{product.comments[0].content}}</view>
						</view>
				</view>
		<!-- </view> -->
</view>