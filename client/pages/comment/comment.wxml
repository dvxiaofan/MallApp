
<view class="product-card">
	<image class="product-image" src="{{product.image}}" />
	<view class="product-info">
		<view class="product-name">{{product.name}}</view>
		<view class="product-price">{{product.price}}</view>
	</view>
</view>

<view class="comment-card">
	<view class="comment-count">1条评论</view>
	<view class="comment-item">
		<image class="item-icon" src="{{product.comments[0].icon}}" />
		<view class="item-name">{{product.comments[0].uName}}</view>
		<view class="item-time">{{product.comments[0].time}}</view>
		<view class="item-text">{{product.comments[0].text}}</view>
	</view>
</view>