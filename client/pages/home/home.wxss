/* home css */
.bg {
  position: fixed;
  top: 0;
	width: 100%;
	height: 180rpx;
}

.hot-card {
	position: relative;
	margin: 32rpx 52rpx 0;
	height: 326rpx;
	background: #fff;
	box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, .02);
	border-radius: 13rpx;
}

.hot-name {
	position: absolute;
	top: 41rpx;
	left: 44rpx;
	width: 300rpx;
	display: flex;
	align-items: center;
}

.hot-name-line {
	width: 24rpx;
	height: 39rpx;
}

.hot-name-text {
	margin: 0 20rpx;
	font-size: 28rpx;
	color: #333;
	font-weight: bold;
}

.hot-info {
	position: absolute;
	left: 42rpx;
	bottom: 0;
	width: 259rpx;
	height: 188rpx;
}

.hot-image {
	width: 241rpx;
	height: 241rpx;
	position: absolute;
	top: 55rpx;
	right: 45rpx;
}

.list-title {
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 90rpx 0 35rpx;
}

.list-title-line {
	width: 21rpx;
	height: 34rpx;
}

.list-title-text {
	font-size: 28rpx;
	font-weight: bold;
	margin: 0 20rpx;
}